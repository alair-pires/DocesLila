@model DocesLila.Models.ProductsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Product</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Title" class="control-label"></label>
                <input asp-for="Product.Title" class="form-control" />
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Batch" class="control-label"></label>
                <input asp-for="Product.Batch" class="form-control" />
                <span asp-validation-for="Product.Batch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Quantity" class="control-label"></label>
                <input asp-for="Product.Quantity" class="form-control" />
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.ExpireDate" class="control-label"></label>
                <input asp-for="Product.ExpireDate" class="form-control" />
                <span asp-validation-for="Product.ExpireDate" class="text-danger"></span>
            </div>
            @*<div enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FileUpload.Arquivo" class="control-label"></label>
                    <input asp-for="FileUpload.Arquivo" type="file" name="Arquivo" class="form-control" />
                </div>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}